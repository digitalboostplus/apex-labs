{
    "name": "@apex-labs/schemas",
    "version": "1.0.0",
    "description": "Type-safe Firestore schemas for Apex Labs peptide therapy platform",
    "private": true,
    "type": "module",
    "main": "./user-schema.ts",
    "types": "./user-schema.ts",
    "exports": {
        ".": {
            "types": "./user-schema.ts",
            "default": "./user-schema.ts"
        },
        "./user": {
            "types": "./user-schema.ts",
            "default": "./user-schema.ts"
        },
        "./user-zod": {
            "types": "./user-schema.zod.ts",
            "default": "./user-schema.zod.ts"
        },
        "./user-json": "./user-schema.json"
    },
    "files": [
        "user-schema.ts",
        "user-schema.zod.ts",
        "user-schema.json",
        "firestore-rules-users.rules",
        "USER_SCHEMA_DOCUMENTATION.md",
        "README.md"
    ],
    "scripts": {
        "validate": "tsc --noEmit",
        "test": "jest",
        "lint": "eslint *.ts",
        "format": "prettier --write \"**/*.{ts,json,md}\""
    },
    "dependencies": {
        "firebase": "^10.7.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/node": "^20.10.6",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "typescript": "^5.3.3"
    },
    "keywords": [
        "firestore",
        "schema",
        "typescript",
        "validation",
        "zod",
        "firebase",
        "apex-labs",
        "peptides"
    ],
    "author": "Apex Labs Development Team",
    "license": "UNLICENSED"
}
